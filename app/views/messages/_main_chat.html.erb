<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
    hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">チャット終了</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="upper-message">
      <div class="message-user">
      Tom?
      </div>
      <div class="message-data">
      2021/08/04 00:00:00
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        NNNNNN
      </div>
    </div>
  </div>
  <div class="message">
    <div class="upper-message">
      <div class="message-user">
      Tom
      </div>
      <div class="message-data">
      2021/08/04 11:11:11
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        HHHHHH
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room,@message],class:'from',local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placehold: 'type a message'%>
    <label class="from-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image,class: 'hidden'%>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<%end%>
